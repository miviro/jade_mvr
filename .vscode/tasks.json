// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "javac",
            "type": "shell",
            "command": "javac",
            "args": [
                "--release",
                "17",
                "-d",
                "bin/",
                "-cp",
                "lib/*",
                "src/agents/*.java",
                "src/jade_mvr/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}